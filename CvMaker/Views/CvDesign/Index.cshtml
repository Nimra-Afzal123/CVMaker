@model CvMaker.Models.CVModel

@{
	ViewData["Title"] = "Index";
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
	<title>CV Template</title>

	<!-- Meta -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="description" content="Responsive Resume Template">
	<meta name="author" content="Xiaoying Riley at 3rd Wave Media">
	<link rel="shortcut icon" href="favicon.ico">

	<!-- Google Font -->
	<link href="~/https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900" rel="stylesheet">

	<!-- FontAwesome JS-->
	<script defer src="~/assets/fontawesome/js/all.min.js"></script>

	<!-- Theme CSS -->
	<link id="theme-style" rel="stylesheet" href="~/assets/css/pillar-1.css">


</head>

<body>
	<div class="text-end mb-3 container">
		<button class="btn btn-primary" onclick="window.print()">
			<i class="fas fa-print"></i> Print CV
		</button>
	</div>

	<article class="resume-wrapper text-center position-relative">
		<div class="resume-wrapper-inner mx-auto text-start bg-white shadow-lg">
			<header class="resume-header pt-4 pt-md-0">
				<div class="row">
					<div class="col-block col-md-auto resume-picture-holder text-center text-md-start">
						<img class="picture" src="~/ImageUrl/@Model.personalinfos.FirstOrDefault()?.ImageUrl" alt="">
					</div><!--//col-->
					<div class="col">
						<div class="row p-4 justify-content-center justify-content-md-between">
							<div class="primary-info col-auto">
								<h1 class="name mt-0 mb-1 text-white text-uppercase text-uppercase">@Model.personalinfos.FirstOrDefault()?.FirstName @Model.personalinfos.FirstOrDefault()?.LastName</h1>
								<div class="title mb-3">@Model.personalinfos.FirstOrDefault()?.AboutTitle</div>
								<ul class="list-unstyled">
									<li class="mb-2"><a class="text-link" href="#"><i class="far fa-envelope fa-fw me-2" data-fa-transform="grow-3"></i>@Model.personalinfos.FirstOrDefault()?.Email</a></li>
									<li><a class="text-link" href="#"><i class="fas fa-mobile-alt fa-fw me-2" data-fa-transform="grow-6"></i>@Model.personalinfos.FirstOrDefault()?.Contact</a></li>
								</ul>
							</div><!--//primary-info-->
							<div class="secondary-info col-auto mt-2">
								<ul class="resume-social list-unstyled">
								Address:	<li class="mb-3"><a class="text-link" href="#">@Model.personalinfos.FirstOrDefault()?.Address</a></li>
							    Nationality:
									<li class="mb-3"><a class="text-link" href="#">Pakistan</a></li>
								
								</ul>
							</div><!--//secondary-info-->
						</div><!--//row-->

					</div><!--//col-->
				</div><!--//row-->
			</header>
			<div class="resume-body p-5">
				<section class="resume-section summary-section mb-5">
					<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Career Summary</h2>
					<div class="resume-section-content">
						<p class="mb-0">@Model.personalinfos.FirstOrDefault().AboutUs</p>
					</div>
				</section><!--//summary-section-->
				<div class="row">
					<div class="col-lg-9">
						<section class="resume-section experience-section mb-5">
							<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Work Experience</h2>
							<div class="resume-section-content">
								<div class="resume-timeline position-relative">


									@foreach(var item in Model.experiences)
									{
										<article class="resume-timeline-item position-relative pb-5">

											<div class="resume-timeline-item-header mb-2">
												<div class="d-flex flex-column flex-md-row">
													<h3 class="resume-position-title font-weight-bold mb-1">@item.JobTitle</h3>
													<div class="resume-company-name ms-auto">@item.InstitueName</div>
												</div><!--//row-->
												<div class="resume-position-time">@item.StartDate - @item.EndDate</div>
											</div><!--//resume-timeline-item-header-->
											<div class="resume-timeline-item-desc">
												<p>@item.Description</p>
											
											</div><!--//resume-timeline-item-desc-->

										</article>

										<!--//resume-timeline-item-->

									}
									



								</div><!--//resume-timeline-->
							</div>


						</section><!--//experience-section-->
						<section class="resume-section language-section mb-5">
							<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Language</h2>
							<div class="resume-section-content">
								<ul class="list-unstyled resume-lang-list">
									@foreach (var item in Model.languages)
									{
										<li class="mb-2"><span class="resume-lang-name font-weight-bold">@item.LanguageName</span>@*  <small class="text-muted font-weight-normal">(@item.LanguageStatus)</small> *@</li>
									}


								</ul>
							</div>
						</section><!--//language-section-->
						<section class="resume-section education-section mb-5">
							<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Education</h2>
							<div class="resume-section-content">
								<ul class="list-unstyled">

									@foreach (var item in Model.qualifications)
									{
										<li class="mb-2">
											<div class="resume-degree font-weight-bold"> @item.Institute</div>
											<div class="resume-degree-org">Degree:@item.Degree</div>
											<div class="resume-degree-org">Marks: @item.ObtainedMarks/@item.TotalMarks</div>
											<div class="resume-degree-org">Grade: @item.Grade</div>
											<div class="resume-degree-time">(Passing Year: @item.PassingYear )</div>
										</li>
									}
								</ul>
							</div>
						</section><!--//education-section-->
					</div>
					<div class="col-lg-3">
						<section class="resume-section skills-section mb-5">
							<h2 class="resume-section-title text-uppercase font-weight-bold pb-3 mb-3">Skills &amp; Tools</h2>
							<div class="resume-section-content">
								

							@foreach(var item in Model.skills){
									<div class="resume-skill-item">
										<h4 class="resume-skills-cat font-weight-bold">@item.SkillTitle</h4>
										<ul class="list-unstyled mb-4">
											<li class="mb-2">
												<div class="resume-skill-name">Level:@item.SkilLevel</div>
												<div class="progress resume-progress">
													<div class="progress-bar theme-progress-bar-dark" role="progressbar" style="width: 98%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
												</div>
											</li>
											<li class="mb-2">
												Description:	<div class="resume-skill-name">@item.description</div>
												
											</li>
											
										</ul>
									</div>

									<!--//resume-skill-item-->
							}

							</div><!--resume-section-content-->
						</section><!--//skills-section-->
						
						
						

					</div>
				</div><!--//row-->
			</div><!--//resume-body-->


		</div>
	</article>


	<footer class="footer text-center pt-2 pb-5">
		<!--/* This template is free as long as you keep the footer attribution link. If you'd like to use the template without the attribution link, you can buy the commercial license via our website: themes.3rdwavemedia.com Thank you for your support. :) */-->
		<small class="copyright">Designed with <span class="sr-only">love</span><i class="fas fa-heart"></i> by <a href="http://themes.3rdwavemedia.com" target="_blank">Xiaoying Riley</a> for developers</small>
	</footer>



</body>
</html>

