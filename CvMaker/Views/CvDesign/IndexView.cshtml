
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = "Choose CV Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        .cv-option {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
            border-radius: 10px;
        }

            .cv-option:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.2);
            }

        .cv-img {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 10px;
        }

        .cv-title {
            margin-top: 15px;
            font-size: 1.2rem;
            font-weight: bold;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container text-center py-5">
        <h1 class="mb-4">Choose Your CV Layout</h1>
        <div class="row justify-content-center">
            <div class="col-md-5 mb-4">
                <a href="@Url.Action("Index1","CvDesign")" class="text-decoration-none text-dark">
                    <div class="cv-option p-3 bg-white">
						<img src="~/assets/images/horizon_page-0001.jpg" alt="Horizontal CV" class="cv-img" />
                        <div class="cv-title">Horizontal CV</div>
                    </div>
                </a>
            </div>
            <div class="col-md-5 mb-4">
                <a href="@Url.Action("Index","CvDesign")" class="text-decoration-none text-dark">
                    <div class="cv-option p-3 bg-white">
						<img src="~/assets/images/vert_page-0001.jpg" alt="Vertical CV" class="cv-img" />
                        <div class="cv-title">Vertical CV</div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS (optional if not using any JS features) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

