@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>CVBuilder - Build Your CV Effortlessly</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            color: white;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .landing-card {
            background-color: rgba(255, 255, 255, 0.1);
            border: none;
            padding: 40px;
            border-radius: 20px;
            backdrop-filter: blur(10px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.2);
        }

        .btn-custom {
            margin: 10px;
            padding: 10px 25px;
            border-radius: 30px;
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="landing-card">
        <h1 class="display-4 fw-bold">Welcome to CVBuilder</h1>
        <p class="lead mb-4">Create your professional CV in minutes!</p>
        <div>
            <a href="@Url.Action("customerRegistration", "Home")" class="btn btn-light btn-custom">Register</a>
            <a href="@Url.Action("CustomerLogin", "Home")" class="btn btn-outline-light btn-custom">Sign In</a>
        </div>
    </div>
</body>
</html>
