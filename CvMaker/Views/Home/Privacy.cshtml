@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>My CV</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="style.css">
    <style>
        .body {
            background-color: #f5f6fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .h3 {
            color: #2c3e50;
        }

        .ul {
            padding-left: 20px;
        }

        .li {
            margin-bottom: 6px;
        }



    </style>
</head>
<body>
    <!-- Print Button -->
    <div class="text-end mb-3 container">
        <button class="btn btn-primary" onclick="window.print()">
            <i class="fas fa-print"></i> Print CV
        </button>
    </div>

    <div class="container mt-5 shadow-lg p-4 rounded bg-white">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-4 text-center bg-dark text-white p-4 rounded-start">
                <img src="https://via.placeholder.com/150" class="img-fluid rounded-circle mb-3" alt="Profile Photo">
                <h2 class="fw-bold">Your Name</h2>
                <p class="text-muted">Web Developer</p>
                <p><i class="fas fa-envelope"></i> you@example.com</p>
                <p><i class="fas fa-phone"></i> +123-456-7890</p>
                <p><i class="fas fa-map-marker-alt"></i> Your City, Country</p>
                <hr class="text-white">
                <h5>Languages</h5>
                <ul class="list-unstyled">
                    <li>English - Fluent</li>
                    <li>Urdu - Native</li>
                    <li>Arabic - Basic</li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="col-md-8 p-4">
                <section>
                    <h3 class="border-bottom pb-2">Profile Summary</h3>
                    <p>I am a passionate web developer with experience in creating modern, responsive websites using technologies like HTML, CSS, JavaScript, Bootstrap, and ASP.NET Core MVC.</p>
                </section>

                <section class="mt-4">
                    <h3 class="border-bottom pb-2">Education</h3>
                    <div>
                        <h5 class="mb-1">BS Information Technology</h5>
                        <p class="text-muted mb-0">GCUF, 2021 – 2025</p>
                        <p>CGPA: 3.7</p>
                    </div>
                </section>

                <section class="mt-4">
                    <h3 class="border-bottom pb-2">Experience</h3>
                    <div>
                        <h5 class="mb-1">Intern - Web Developer</h5>
                        <p class="text-muted mb-0">XYZ Company | Summer 2024</p>
                        <ul>
                            <li>Built responsive websites using Bootstrap</li>
                            <li>Worked with ASP.NET MVC and Firebase</li>
                        </ul>
                    </div>
                </section>

                <section class="mt-4">
                    <h3 class="border-bottom pb-2">Skills</h3>
                    <div class="row">
                        <div class="col-6">
                            <ul>
                                <li>HTML, CSS, Bootstrap</li>
                                <li>JavaScript</li>
                                <li>C#, ASP.NET Core MVC</li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <ul>
                                <li>Firebase</li>
                                <li>SQL Server</li>
                                <li>Git & GitHub</li>
                            </ul>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>

</body>
</html>

