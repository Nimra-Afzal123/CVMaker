@{
    ViewData["Title"] = "Customer Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - CVBuilder</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-container {
            background: white;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        .logo-text {
            font-size: 2rem;
            font-weight: 700;
            color: #6a11cb;
        }

        .btn-primary {
            background-color: #6a11cb;
            border: none;
        }

            .btn-primary:hover {
                background-color: #5b0ec0;
            }

        a {
            color: #6a11cb;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .error-message {
            color: red;
            font-size: 1rem;
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="text-center mb-4">
            <div class="logo-text">CVBuilder</div>
            <p class="text-muted">Login to your account</p>
        </div>

        <form method="POST">
            <div class="mb-3">
                <label for="email" class="form-label">Email Address</label>
                <input type="email" class="form-control" id="email" name="customerEmail" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="customerPassword" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div class="text-center mt-3">
            <p>Don't have an account? <a href="@Url.Action("customerRegistration","home")">Sign Up</a></p>
            <h5 class="error-message">@ViewBag.message</h5>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
